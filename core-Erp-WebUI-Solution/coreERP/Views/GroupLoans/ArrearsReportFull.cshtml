@{

    Layout = "/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Arrears Report";

}


<div id="myform" class="w-section inverse 1w boxed container">
    <h3 class="pageBanner">Arrears Report</h3>
    <br />
    <br />
    <div id="form-container" style="position: relative">

        <div class="row">
            <div class="col-md-2">Select Date :</div>
            <div class="col-md-3">
                <input type="text" id="paymentDate" />
            </div>
        </div><br />

    </div>

    <div class="form-horizontal">

        <div id="row">
            <div id="tabs">
                <ul>
                    <li class="k-state-active">Arrears Report</li>
                </ul>


                <div>
                    <button class="btn btn-primary" id="btnPdfExport">Export To PDF</button>
                    <button class="btn btn-primary" id="btnExcelExport">Export To Excel</button>
                    <div id="arrearsGrid"> </div>
                </div>

            </div> <!--EndTab--><br />
        </div>

    </div>
</div>

@section FootScripts{
    <script src="~/scripts/app/Loans/GroupLoans/ArrearsReportFull.js"></script>

    <script type="x/kendo-template" id="page-template">
        <div class="page-template">
            <div class="header">
                <div style="float: right">Page #: pageNum # of #: totalPages #</div>
                Multi-page grid with automatic page breaking
            </div>
            <div class="watermark">KENDO UI</div>
            <div class="footer">
                Page #: pageNum # of #: totalPages #
            </div>
        </div>
    </script>
    <script>
        

        $("#btnPdfExport").kendoButton({
            click: function () {
                $("#arrearsGrid").getKendoGrid().saveAsPDF();
            }
        });


        $("#btnExcelExport").kendoButton({
            click: function () {
                $("#arrearsGrid").getKendoGrid().saveAsExcel();
            }
        });

    </script>
}