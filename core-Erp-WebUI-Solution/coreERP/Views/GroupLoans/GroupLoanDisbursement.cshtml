@{

    Layout = "/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Group Loans";

}

<div id="myform" class="w-section inverse 1w boxed container">
    <h3 class="pageBanner">Loan Group Batch Disbursement</h3>
    <div id="form-container" style="position: relative">
        <div class="form-horizontal">
            <br/>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2">Disbursm. Date</div>
                <div class="col-md-3">
                    <input class="form-control" type="text" id="disbursementDate" data-val="true" data-val-required="*">
                </div>
                <div class="col-md-4"></div>
            </div><br/>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-2" align="right">Group Day</div>
                <div class="col-md-3">
                    <input class="form-control" type="text" id="day" data-val="true" data-val-required="*">
                </div>
                <div class="col-md-2" align="right">Group</div>
                <div class="col-md-3">
                    <input class="form-control" type="text" id="groupName" readonly data-val="true" data-val-required="*">
                </div>
                <div class="col-md-1"></div>
            </div><br/>
        </div>
        <br />
        <div id="row">
            <div id="tabs">
                <ul>
                    <li class="k-state-active">Group Loans</li>
                </ul>
                <div>
                    <div id="groupLoanGrid"> </div>
                </div>
            </div> <!--EndTab--><br />
        </div>

    </div>
</div>





@section FootScripts{

    <script>
        var loanGroupId = '@ViewBag.Id';
    </script>
<script src="~/scripts/app/Loans/GroupLoans/GroupLoanDisbursement.js"></script>
}