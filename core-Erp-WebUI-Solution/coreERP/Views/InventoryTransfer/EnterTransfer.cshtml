@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Inventory Transfer";
}




<h2>Enter Inventory Transfer</h2>

<hr>
<div id="myform">
    <div class="form-horizontal" type="form">
        <div class="row">
            <div class="col-md-2">Request Location</div>
            <div class="col-md-4">
                <input type="text" id="fromLocation"  required data-required-msg="Required" />
            </div>

            <div class="col-md-2">Destination Location</div>
            <div class="col-md-4">
                <input type="text" id="toLocation" required data-required-msg="Required" />
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-2"> Requisition Date </div>
            <div class="col-md-4">
                <input type="text"  id="requisitionDate"  required data-required-msg="Required" />
            </div>
        </div>

        <hr>
        <div class="row">

            <div id="tabs">
                <ul>
                    <li class="k-state-active">Transfers</li>
                </ul>
                <div>
                    <div id="transferGrid" ></div>
                </div>
            </div> <!--EndTab-->

        </div>
        <hr>
        <div class="row">
            <div>
                <div class="col-md-2" id="saveButton">
                    <input type="button" class="btn btn primary" id="save" value="Save Transfer" style="width: 100%"/>
                </div>
                <div class="col-md-10"></div>
            </div><!--SaveButton-->
        </div>
    </div>
</div>

@section FootScripts{
    <script type="text/javascript">
        var inventoryTransferId = '@ViewBag.Id';
    </script>
<script src="~/scripts/app/Inventory/InventoryTransferManagement/enterTransfer.js"></script>
}


