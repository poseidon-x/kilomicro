@{
    Layout = "/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Loan Group";
}

<div id="myform" class="w-section inverse 1w boxed container">
    <h3 class="pageBanner">Loan Group</h3>
    <div id="form-container" style="position: relative">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-2 col-xs-2">Group Name</div>
                <div class="col-md-4 col-xs-4">
                    <input class="form-control" type="text" id="groupName" data-val="true" data-val-required="*">
                </div>
                <div class="col-md-2 col-xs-2">Group Day</div>
                <div class="col-md-4 col-xs-4">
                    <input class="form-control" type="text" id="groupDay" data-val="true" data-val-required="*">
                </div>
            </div><br/>
            <div class="row">
                <div class="col-md-2 col-xs-2">Relations Officer</div>
                <div class="col-md-4 col-xs-4">
                    <input class="form-control" type="text" id="relationsOfficer" data-val="true" data-val-required="*">
                </div>
                <div class="col-md-2 col-xs-2">Group Leader</div>
                <div class="col-md-4 col-xs-4">
                    <input class="form-control" type="text" id="groupLeaderClient" data-val="true" data-val-required="*">
                </div>
            </div><br />
        </div>
        <br />
        <div id="row">
            <div id="tabs">
                <ul>
                    <li class="k-state-active">Group Client</li>
                </ul>
                <div>
                    <div id="groupGrid"> </div>
                </div>
            </div> <!--EndTab--><br />
        </div>
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-primary" id="save">Save Group &raquo; </button>
            </div><!--SaveButton-->
            <br />
        </div>
    </div>
</div>





@section FootScripts{

    <script>
        var loanGroupId = '@ViewBag.Id';
    </script>
<script src="~/scripts/app/Loans/setup/CreateLoanGroup.js"></script>
}