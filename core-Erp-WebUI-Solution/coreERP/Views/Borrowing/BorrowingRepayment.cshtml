    Layout = "/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Borrowing Repayment Schedule";

}
<div>
    <h2>Borrowing Repayment Schedule</h2>
</div>
<br/>
<div class="w-section inverse 1w boxed container form-horizontal" id="myform">
