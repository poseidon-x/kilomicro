
@{
    Layout = "/Views/shared/_Layout.cshtml";
    ViewBag.Title = "Upgrade Investment";
}

<div id="myform" class="w-section inverse 1w boxed container">
    <h3>Upgrade Investments</h3>
    <hr/>
    <div class="row">
        <div class="col-md-2">
            <label>Search Criteria</label>
            <!--Search Criteria-->
        </div>
        <div class="col-md-1">
            <input type="radio" name="searchCriteria" id="product" class="k-radio" value="product">
            <label class="k-radio-label" for="product">Product</label>
        </div>
        <div class="col-md-2">
            <input type="radio" name="searchCriteria" id="depositNo" class="k-radio" value="depositNo">
            <label class="k-radio-label" for="depositNo">Investment No.</label>
        </div>
        <div class="col-md-1">
            <input type="radio" name="searchCriteria" id="clientName" class="k-radio" value="clientName">
            <label class="k-radio-label" for="clientName">Client</label>
        </div>

        <div class="col-md-4">
            <input type="text" id="search" required data-required-msg="Invalid"/>
        </div>
        <div class="col-md-2" align="right">
            <button id="searchButton" class="btn btn-primary">Search &raquo;</button>
        </div>
    </div>
    <br/>
    <div>
        <div id="tabs">
            <ul>
                <li class="k-state-active">Client Investments</li>
            </ul>
            <div>
                <div id="grid"> </div>
            </div>
        </div> <!--EndTab--><br />
    </div>
    
</div>

@section FootScripts{
<script src="~/scripts/app/Loans/Deposit/UpgradeInvestmentAccount.js"></script>
}