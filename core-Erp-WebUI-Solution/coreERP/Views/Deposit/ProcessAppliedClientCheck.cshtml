 
@{
    ViewBag.Title = "Client Checks";
}

<h3>Investment Checks</h3>
<div>
    <div class="col-md-1"></div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <ul class="fieldlist">
                <li>
                    <label for="client">Client:</label>
                    <input type="text" id="client" style="width: 100%;" readonly/>
                </li>
            </ul>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4">
            Check No.:
            <input type="text" id="checkNo" readonly />
        </div>
        <div class="col-md-4">
            Balance:
            <input type="text" id="balance" readonly />
        </div>
        <div class="col-md-1"></div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-2"></div>
        <div id="tabs" class="col-md-8">
            <ul>
                <li id="gridHeader" class="k-state-active">Client Checks</li>
            </ul>
            <div>
                <div id="grid"> </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <button id="save" class="btn btn-primary">Save Check Application&raquo;</button>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>

@section FootScripts{

    <script type="text/javascript">
        var clientCheck = '@ViewBag.ClientCheck';
        var clientId = '@ViewBag.ClientId';
    </script>
<script src="~/scripts/app/Loans/Deposit/ProcessAppliedClientCheck.js"></script>
}