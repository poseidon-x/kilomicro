 
@{
    ViewBag.Title = "Client Checks";
}

<h3>Client Investment Checks</h3>
<div>
    <div class="col-md-1"></div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            Client:
            <input type="text" id="client" required data-required-msg="Invalid"/>
        </div>
        <div class="col-md-3"></div>

    </div>
    <hr/>
    <div class="row">
        <div class="col-md-2"></div>
        <div id="tabs" class="col-md-8">
            <ul>
                <li id="gridHeader" class="k-state-active">Enter Client Check</li>
            </ul>
            <div>
                <div id="grid"> </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2">
            <button id="save" class="btn btn-primary">Save Check(s)&raquo;</button>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>

@section FootScripts{

    <script type="text/javascript">
        var clientId = '@ViewBag.id';
    </script>

    <script src="~/scripts/app/Loans/Deposit/EnterDepositCheck.js"></script>
}