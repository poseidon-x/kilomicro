
@{
    ViewBag.Title = "Investment Certificate";
}

<h2>Certificate Configuration
    </h2>

<div id="myform">
    <div id="form-container" style="position: relative">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-2 col-xs-2">Early Redemption: </div>
                <div class="col-md-4 col-xs-4">
                    <textarea type="text" id="earlyRedemption"></textarea>
                </div>
                <div class="col-md-2 col-xs-2">Trust: </div>
                <div class="col-md-4 col-xs-4">
                    <textarea type="text" id="trust" ></textarea>
                </div>  
            </div><br />
            <div class="row">
                <div class="col-md-2 col-xs-2">Authority </div>
                <div class="col-md-4 col-xs-4">
                    <textarea type="text" id="authority"></textarea>
                </div>
                <div class="col-md-2 col-xs-2">Risk Disclosure: </div>
                <div class="col-md-4 col-xs-4">
                    <textarea type="text" id="riskDisclosure" ></textarea>
                </div>
            </div><br/>
        </div>
        <br />

        <div class="row">
            <div class="col-md-1"></div>
                <div class="col-md-2">
                    <button type="button" class="btn btn-primary" id="save">Save Settings &raquo; </button>
                </div><!--SaveButton-->
                <br />
        </div>
        <br />
    </div>
</div>

@section FootScripts{
    <script type="text/javascript">
    var id = '@ViewBag.Id';
    </script>
<script src="~/scripts/app/Loans/Deposit/DepositCertificateConfig.js"></script>
