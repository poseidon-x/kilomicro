
@{
    ViewBag.Title = "Client Investment";
}

<h2>New Investment</h2>

<div id="myform">
    <div id="form-container" style="position: relative">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-3 col-xs-3 col-lg-3"></div>
                <div class="col-md-6 col-xs-6 col-lg-6 input-group">
                    <div class="input-group">
                        <input type="text" id="searchInput" class="form-control" placeholder="Search Client, eg:Appiah ... ">
                        <span class="input-group-btn">
                            <button id="searchBtn" class="btn btn-default" type="button">Search!</button>
                        </span>
                    </div>
                </div>
            </div>
            <br />
            <div id="details">
                <div class="row">
                    <div class="col-md-6 col-xs-6" align="center">
                        <img id="clientImage" class="img-rounded" alt="Client Image" height="170" width="170" />
                    </div>
                    <div class="col-md-6 col-xs-6">
                        <div class="row">
                            <div class="col-md-4 col-xs-4">Client: </div>
                            <div class="col-md-8 col-xs-8">
                                <input type="text" id="client" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4 col-xs-4">Invstm. Product: </div>
                            <div class="col-md-8 col-xs-8">
                                <input type="text" id="investmentProduct" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4 col-xs-4">Relations Officer: </div>
                            <div class="col-md-8 col-xs-8">
                                <input type="text" id="relationshipOfficer" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4 col-xs-4">Field Agent: </div>
                            <div class="col-md-8 col-xs-8">
                                <input type="text" id="fieldAgent" />
                            </div>
                        </div>

                    </div>



                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2">Period: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="depositPeriod" />
                    </div>
                    <div class="col-md-2 col-xs-2">Annl Intrst. Rate: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="annualInterestRate" />
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2">Narration : </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="narration" />
                    </div>
                    <div class="col-md-2 col-xs-2"> </div>
                    <div class="col-md-4 col-xs-4">
                        
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2"> </div>
                    <div class="col-md-4 col-xs-4">
                        
                    </div>
                    <div class="col-md-2 col-xs-2"> </div>
                    <div class="col-md-4 col-xs-4">
                        
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2"> </div>
                    <div class="col-md-4 col-xs-4">
                        
                    </div>
                    <div class="col-md-2 col-xs-2">Maturity Date: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="maturityDate" readonly />
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2"> </div>
                    <div class="col-md-4 col-xs-4">
                        
                    </div>
                    <div class="col-md-2 col-xs-2">Month. Intrst. Rate: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="monthlyInterestRate" />
                    </div>
                </div><br />
                <div class="row">
                    <div class="col-md-2 col-xs-2">Intrst. Expected: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="interestExpected" readonly />
                    </div>
                    <div class="col-md-2 col-xs-2">Mat. Sum: </div>
                    <div class="col-md-4 col-xs-4">
                        <input type="text" id="maturitySum" readonly />
                    </div>

                </div><br />
            </div>
        </div>
        <br />
        <div id="row">
            <div id="tabs">
                <ul>
                    <li class="k-state-active">Notes</li>
                    <li>Coins</li>
                </ul>
                <div>
                    <div id="notes"></div>
                </div>
                <div>
                    <div id="coins"></div>
                </div>
            </div> <!--EndTab--><br />
        </div> 
        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-primary" id="save">Save Investment &raquo; </button>
            </div><!--SaveButton-->
            <br />
        </div>
        <br />
    </div>
</div>

@section FootScripts{
    <script type="text/javascript">
        var depositId = '@ViewBag.Id';
    </script>
    <script src="~/scripts/app/Loans/Deposit/Deposit.js"></script>
}