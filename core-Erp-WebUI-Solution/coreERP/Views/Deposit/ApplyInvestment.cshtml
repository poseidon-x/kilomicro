
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ApplyInvestment";
}

<h2>ApplyInvestment</h2>

<div id="myform">
    <div id="form-container" style="position: relative">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6 col-xs-6" align="center">
                    <img id="clientImage" class="img-rounded" alt="Client Image" height="170" width="170" />
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="row">
                        <div class="col-md-4 col-xs-4">Client: </div>
                        <div class="col-md-8 col-xs-8">
                            <input type="text" id="client" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4 col-xs-4">Amt. Invested: </div>
                        <div class="col-md-8 col-xs-8">
                            <input type="text" id="amountInvested" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4 col-xs-4">Deposit Date: </div>
                        <div class="col-md-8 col-xs-8">
                            <input type="text" id="depositDate" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4 col-xs-4">Payment Type: </div>
                        <div class="col-md-8 col-xs-8">
                            <input type="text" id="paymentType" />
                        </div>
                    </div>

                </div>

            </div><br/>
            <div class="row" id="chequeDet">
                <div class="col-md-2 col-xs-2">Check No: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="checkNo" />
                </div>
                <div class="col-md-2 col-xs-2"> Bank: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="bank" />
                </div>
            </div><br/>
            <div class="row">
                <div class="col-md-2 col-xs-2">Narration : </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="narration" />
                </div>
                <div class="col-md-2 col-xs-2">Invstm. Product: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="investmentProduct" />
                </div>
                <!--<div class="col-md-1 col-xs-2"> Princ. Repayment: </div>
                <div class="col-md-3 col-xs-3">
                    <input type="text" id="principalRepayment" />
                </div>-->
            </div><br />

            <div class="row"><!--
                <div class="col-md-1 col-xs-2">Intrst. Repayment: </div>
                <div class="col-md-3 col-xs-3">
                    <input type="text" id="interestRepayment" />
                </div>-->
                <div class="col-md-2 col-xs-2">Relations Officer: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="relationshipOfficer" />
                </div>
                <div class="col-md-2 col-xs-1">Period: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="depositPeriod" />
                </div>
            </div><br />
            <div class="row">
                <div class="col-md-2 col-xs-1">Maturity Date: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="date" id="maturityDate" readonly />
                </div>
                <div class="col-md-2 col-xs-2"> Annl Intrst. Rate: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="annualInterestRate" />
                </div>
                <!--<div class="col-md-1 col-xs-1">Month. Intrst. Rate: </div>
                <div class="col-md-3 col-xs-3">
                    <input type="text" id="monthlyInterestRate" />
                </div>-->
            </div><br />
            <div class="row">
                <div class="col-md-2 col-xs-1">Intrst. Expected: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="interestExpected" readonly />
                </div>
                <div class="col-md-2 col-xs-2">Intrst. Balance: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="interestBalance" readonly />
                </div>
                
            </div><br />
            <div class="row">
                <div class="col-md-2 col-xs-2">Principal Bal.: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="principalBalance" readonly />
                </div>
                <div class="col-md-2 col-xs-2">Mat. Sum: </div>
                <div class="col-md-4 col-xs-4">
                    <input type="text" id="maturitySum" readonly />
                </div>
            </div><br />
        </div>
        <br />

        <div class="row">
            <div class="col-md-2">
                <button type="button" class="btn btn-primary" id="save">Save Investment &raquo; </button>
            </div><!--SaveButton-->
            <br />
        </div>
        <br />
    </div>
</div>

@section FootScripts{
    <script type="text/javascript">
        var depositId = '@ViewBag.Id';
        var receiptDetailId = '@ViewBag.reciptDetId';
    </script>
    <script src="~/scripts/app/Loans/Deposit/ApplyReceivedInvestment.js"></script>
}
