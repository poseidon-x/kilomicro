@{
    ViewBag.Title = "My Funds";
}

<div id="myform" class="w-section inverse 1w boxed container">
   
    <hr />
    <div class="row">
        <div class="col-md-10">
            <h3 style="margin-top:10px;">My Funds</h3>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="refresh" style="width: 100%">Refresh &raquo; </button>
        </div>
        <br/>
    </div>
    <div id="row">
        <div id="tabs">
            <ul>
                <li class="k-state-active" id="tabstrip"></li>
            </ul>
            <div>
                <div id="myFundGrid"></div>
                <script type="text/x-kendo-template" id="detail-template">
                    <div class="tabstrip">
                        <ul>
                            <li class="k-state-active">Remaining Notes</li>
                            <li>Remaining Coins</li>
                        </ul>

                        <div>
                            <div class="notes"></div>
                        </div>
                        <div>
                            <div class="coins"></div>
                        </div>
                    </div>
                </script>
            </div>
        </div> <!--EndTab--><br />
    </div>
</div>


@section FootScripts{
    <script src="~/scripts/app/Loans/Cashier/MyFund.js"></script>
}