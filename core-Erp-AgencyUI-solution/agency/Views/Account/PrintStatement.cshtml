
@{
    ViewBag.Title = "Print Statement";
    Layout = "~/Views/Shared/_AgencyLayout.cshtml";
}

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <h3 class="page-title">Print Statement <small>Account Balance</small></h3>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-list-alt"></i><a href="#"> Check Balance</a>
                </li>
            </ul>
        </div>
        <!-- END PAGE HEADER-->
        <div class="clearfix"></div>
        <div class="row ">
            <div class="col-md-12 col-sm-12">
                <div class="portlet box blue-steel">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-list-alt"></i>Print Account Statement
                        </div>
                    </div>
                    <div class="portlet-body">
                        <form role="form" class="form-horizontal">
                            <div class="form-body">
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="col-md-4 control-label">Account Number:</label>
                                        <div class="input-group input-large">
                                            <input type="text" class="form-control" placeholder="Account Number">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="col-md-4 control-label">Account Type:</label>
                                        <select class="form-control input-large">
                                            <option>Option 1</option>
                                            <option>Option 2</option>
                                            <option>Option 3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label class="col-md-4 control-label">Start Date:</label>
                                        <div class="input-group input-large">
                                            <input type="text" class="form-control" placeholder="Start Date">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="col-md-4 control-label">End Date:</label>
                                        <div class="input-group input-large">
                                            <input type="text" class="form-control" placeholder="End Date">
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="form-actions" style="text-align:right; clear:both">
                                <div class="row">
                                    <div class="col-md-offset-4 col-md-8">
                                        <button type="submit" class="btn green"><i class="fa fa-list-alt"></i> Get Statement</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END CONTENT -->